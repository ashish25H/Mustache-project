<section class="user-info-section">
    <div class="card">
        <div class="card-head">
            <div class="heading">BASICE INFORMATION</div>
            <div class="edit-icon" id="edit-btn"><i class="fa-sharp fa-solid fa-pen-to-square"></i></div>
        </div>
        <hr>

        <form action="#" id="basic-info-form">
            <div>
                <label for="name">Full Name </label>
                <input type="text" class="bs-info" name="name" id="name" value="{{name}}" readonly>
            </div>

            <div>
                <label for="gender">Gender </label>
                <input type="text" class="bs-info" name="gender" id="gender" value="{{gender}}" readonly>
            </div>

            <div>
                <label for="DOB">Birth Date </label>
                <input type="text" class="bs-info" name="DOB" id="DOB" value="{{DOB}}" readonly>
            </div>

            <div>
                <label for="martail-status">Marital Status </label>
                <input type="text" class="bs-info" name="martail-status" id="martail-status" value="{{maritalStatus}}" readonly>
            </div>

            <div>
                <label for="location">Location </label>
                <input type="text" class="bs-info" name="location" id="location" value="{{location}}" readonly>
            </div>

             <input type="submit" value="Save" class="submit-btn" id="submit-bs-btn">

        </form>
    </div>

    <div class="line"></div>

    <div class="card">
        <div class="card-head">
            <div class="heading">WORK</div>
            <div class="edit-icon" id="work-info-edit"><i class="fa-sharp fa-solid fa-pen-to-square"></i></div>
        </div>
        <hr>

        <form action="#">
            <div>
                <label for="occupation">Occupation </label>
                <input type="text" name="name" class="work-info" id="occupation" value="{{occupation}}" readonly>
            </div>

            <div>
                <label for="skills">Skills </label>
                <input type="text" class="work-info" name="skills" id="skills" value="{{skills}}" readonly>
            </div>

            <div>
                <label for="jobs">Jobs </label>
                <input type="text" class="work-info" name="jobs" id="jobs" value="{{jobs}}" readonly>
            </div>

             <input type="submit" value="Save" class="submit-btn" id="submit-work-info-btn">

        </form>
    </div>
</section>